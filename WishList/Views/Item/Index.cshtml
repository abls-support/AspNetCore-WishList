@model IEnumerable<WishList.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Wishlist</h1>

<p>
    <a asp-action="Create">Add item</a>
</p>
<ul>
@foreach(var item in Model)
{
    <li>
        @item.Description <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
    </li>
}
</ul>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
